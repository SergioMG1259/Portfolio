---
import CardPresentation from "../components/CardPresentation.astro";
import NavBar from "../components/NavBar.astro";
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="bg-background text-font w-full h-dvh min-h-screen flex flex-col">
        <main class="pt-30 relative flex-1">
            <NavBar />
            <div class="flex flex-col gap-10 m-auto px-5 max-w-3xl lg:flex-row lg:max-w-5xl lg:gap-20">
                <CardPresentation />
                <div class="flex flex-1 flex-col gap-10 lg:gap-16">
                    <slot />
                </div>
            </div>
        </main>
		<!-- FOOTER -->
		<footer class="text-center w-full px-5 py-12">
			<p>Portfolio developed using <span class="font-semibold">Astro framework</span></p>
		</footer>		
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		box-sizing: border-box;
		padding: 0;
		width: 100%;
		height: 100%;
	}
</style>