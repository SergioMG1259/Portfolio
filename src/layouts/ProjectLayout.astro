---
import NavBar from "../components/NavBar.astro";
import "../styles/global.css";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Sergio Guanilo - Software Engineer Portfolio</title>
	</head>
	<body class="bg-background text-font w-full h-dvh min-h-screen flex flex-col">
		<main class="pt-30 relative px-5 max-w-3xl m-auto lg:max-w-5xl flex-1">
            <NavBar />
			<slot />
		</main>
		<!-- FOOTER -->
		<footer class="text-center w-full px-5 py-12">
			<p>Portfolio developed using <span class="font-semibold">Astro framework</span></p>
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		box-sizing: border-box;
		padding: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script src="../scripts/scroll-animations.js"></script>
